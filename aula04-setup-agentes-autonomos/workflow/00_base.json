{
  "name": "A04 - Etapa 0 - Base (sem agente)",
  "nodes": [
    {
      "id": "1",
      "name": "Form Input",
      "type": "n8n-nodes-base.formTrigger",
      "parameters": {
        "fields": [
          "nome",
          "email",
          "descricao"
        ]
      }
    },
    {
      "id": "2",
      "name": "Salvar no Banco",
      "type": "n8n-nodes-base.mySql",
      "parameters": {
        "query": "INSERT INTO pedidos (nome,email,descricao) VALUES (:nome,:email,:descricao)"
      }
    },
    {
      "id": "3",
      "name": "Confirmar por E-mail",
      "type": "n8n-nodes-base.emailSend",
      "parameters": {
        "to": "={{$json[\"email\"]}}",
        "subject": "Recebemos seu pedido",
        "text": "Obrigado!"
      }
    }
  ],
  "connections": {
    "1": {
      "main": [
        [
          "2"
        ]
      ]
    },
    "2": {
      "main": [
        [
          "3"
        ]
      ]
    }
  }
}